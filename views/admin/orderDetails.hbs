<link rel="stylesheet" href="/admin/userMangement.css">
<link rel="stylesheet" href="/admin/orderDetails.css">

<section class="order-details-page">
  <h2>Order Details</h2>

  <div class="order-info">
    <p><strong>Order ID:</strong>#{{shortId order._id}}</p>
    <p><strong>Customer:</strong> {{order.userId.username}} ({{order.userId.email}})</p>
    <p><strong>Total Amount:</strong> ₹{{order.total}}</p>
    <p><strong>Status:</strong> {{order.status}}</p>
    <p><strong>Payment Method:</strong> {{order.paymentMethod}}</p>
    <p><strong>Ordered On:</strong> {{formatDate order.createdAt}}</p>
    <h1>Shipping Address</h1>
    <p><strong>Phone:</strong> {{order.address.mobile}}</p>
    <p><strong>Address Line:</strong> {{order.address.addressLine}}</p>
    <p><strong>City:</strong> {{order.address.city}}</p>
    <p><strong>State:</strong> {{order.address.state}}</p>
    <p><strong>Pincode:</strong> {{order.address.pinCode}}</p>
  </div>

  <h3>Products</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      {{#each order.products}}
      <tr>
        <td><img src="{{this.productId.images.[0]}}" width="60"></td>
        <td>{{this.productId.name}}</td>
        <td>{{this.quantity}}</td>
        <td>₹{{this.price}}</td>
        <td>₹{{multiply this.price this.quantity}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <a href="/admin/orderManagement" class="btn btn-secondary">Back to Orders</a>
</section>
