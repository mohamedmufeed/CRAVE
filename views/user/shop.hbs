<div class="untree_co-section product-section before-footer-section">
	{{#if product}}
	<div class="container">

		<div class="row">
			{{!-- filter bar starts --}}
			<div class="filter-bar  col-md-2">
				<h3>Advanced Search</h3>
				<form  action="/products/filter" method="GET" class="filter-form">
					<label for="category">Category</label>
					<select class="form-control" name="category[]" id="category">
						<option>All Categories</option>
						<option value="sofa">Sofa</option>
						<option value="chair">Chair</option>
					</select>


					<div class="form-group">
						<label for="price-range">Price Range</label>
						<input type="range" min="0" max="10000" value="0" id="min-price" name="min-price"
							class="slider form-control mb-2" oninput="updateMinValue(this.value)">
						<input type="range" min="0" max="10000" value="10000" id="max-price" name="max-price"
							class="slider form-control" oninput="updateMaxValue(this.value)">

						<div class="range-values">
							<span>Min Price: ₹<span id="min-price-value">0</span></span>
							<span>Max Price: ₹<span id="max-price-value">10000</span></span>
						</div>
					</div>
					<div class="form-group filter">
						<label for="sort">Sort By</label>
						<select class="form-control" name="sort" id="sort">
							<option value="">Default</option>
							<option value="popularity">Popularity</option>
							<option value="priceLow">Price: Low to High</option>
							<option value="priceHigh">Price: High to Low</option>
							<option value="averageRating">Average Ratings</option>
							<option value="featured">Featured</option>
							<option value="newArrivals">New Arrivals</option>
							<option value="aToZ">A - Z</option>
							<option value="zToA">Z - A</option>
						</select>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Apply Filters</button>
					</div>
				</form>
			</div>

			{{!-- filter bar ends --}}
			<div class="col-md-9">
				<div class="row ">
					{{#each product}}
					<!-- Start Column 1 -->
					<div class="col-md-4 mb-5">
						<a class="product-item" href="/productdetails/{{this.id}}">
							<img src="{{this.images.[0]}}" class="img-fluid product-thumbnail">
							<h3 class="product-title">{{this.name}}</h3>
							<strong class="product-price">₹{{this.price}} {{this.discountLabel}}</strong>

                         	<form action="/cart/add" method="post">
								<input type="hidden" name="productId" value="{{product._id}}">
							<span class="icon-cross">
								<img src="/user/css,js/images/cross.svg" class="img-fluid">
							</span>
							</form>
						</a>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>

	{{else}}
<div class="row">
  <div class="col-md-12 text-center">
    <h3 class="text-black">No Products Found</h3>
    <p>We're sorry, but we couldn't find any products matching your search or selection. Try exploring all available items!</p>
    <a href="/products" class="btn btn-black btn-lg">View All Products</a>
  </div>
</div>



	{{/if}}
</div>
