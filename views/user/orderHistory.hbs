<div class="untree_co-section before-footer-section">
    <div class="container">
        {{#if orders.length}}
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>


                                <th scope="col" class="product-thumbnail">Image</th>
                                <th scope="col" class="product-name">Date</th>
                                <th scope="col" class="product-price">Price</th>

                                <th scope="col" class="order-status">Status</th> <!-- Added Order Status -->
                                <th scope="col" class="order-status">Payment Status</th> <!-- Added Order Status -->
                                <th scope="col" class="order-action">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                {{#each orders}}
                            <tr>
                                <td class="product-thumbnail">
                               <img src="{{this.products.[0].productId.images.[0]}}" alt="Image" class="img-fluid">

                                </td>
                                {{!-- <td>#{{shortId this._id}}</td> --}}
                                <td>{{formatDate this.createdAt}}</td>
                                <td>â‚¹{{this.total}}</td>
                                <td><strong>{{this.status}}</strong></td>
                                <td><strong>{{this.paymentStatus}}</strong></td>
                                <td>
                                    <a href="/profile/orders/orderdetails/{{this._id}}"
                                        class="btn btn-black btn-sm">View</a>

                                    {{#if (or (eq this.paymentStatus "Failed") (eq this.paymentStatus "Pending"))}}
                                 
                <button id="retryPaymentBtn" type="button" class=" retryPaymentBtn btn btn-black btn-sm"
                    data-order-id="{{this._id}}">Retry
                    Payment</button>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                    <div class="pagination-container">
                        <ul class="pagination justify-content-center mt-4">
                            {{#if (gt currentPage 1)}}
                            <li class="page-item ">
                                <a class="page-link" href="?page={{subtract currentPage 1}}">Previous</a>
                            </li>
                            {{/if}}

                            {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}

                            {{#if (lt currentPage totalPages)}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{add currentPage 1}}">Next</a>
                            </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
                {{else}}

                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3 class="text-black">Your Dont have orders !</h3>
                        <p>Start shopping now and Make orders!</p>
                        <a href="/products" class="btn btn-black btn-lg">Go to Shop</a>
                    </div>
                </div>
                {{/if}}

        </div>
    </div>
</div>









