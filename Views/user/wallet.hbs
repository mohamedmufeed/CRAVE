{{!-- wallet.hbs --}}
<div class="container1 mt-5 mb-5">
    
  <div class="wallet-section">
    <div class="card">

      <div class="balance-info">
        <div class="balance">
			<span>Your Balance</span>
          <span class="amount">₹{{ formatCurrency walletAmount}}</span>
         
        </div>
        <div class="currency">
         
          <span class="status">Active</span>
        </div>
      </div>
 
    </div>
  </div>

  <div class="payments-section">
  <div class="payments-header">
    <div class="payment-tabs">
      <button class="active">All Payments</button>
    </div>
  </div>

  <div class="recent-payments">
    <div class="payment-list">
      {{#each transactions}}
      <div class="payment-item">
        <div class="payment-info">
          <div class="payment-icon">{{#if (eq this.transactionType "Credit")}}CR{{else}}DR{{/if}}</div>
          <div class="payment-details">
            <span class="name">{{this.description}}</span>
            <span class="date">{{ formatDate this.createdAt}}</span>
          </div>
        </div>
        <span class="amount {{#if (eq this.transactionType "Credit")}}positive{{else}}negative{{/if}}">
          {{#if (eq this.transactionType "Credit")}}+{{else}}-{{/if}}₹{{ formatCurrency this.amount}}
        </span>
      </div>
      {{/each}}
    </div>
  </div>
</div>

</div>





