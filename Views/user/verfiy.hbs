<script>
  console.log("{{message}}")
 document.addEventListener("DOMContentLoaded", function () {
    const toastEl = document.querySelector('.toast');
    const toast = new bootstrap.Toast(toastEl);
    if ("{{message}}") {
      toast.show();
    }
  });
let timerOn = true;
let inteval;
  function timer(remaining) {
    document.getElementById("timer").innerHTML = "00"+":"+remaining;

inteval =setInterval(()=>{
  remaining--;
    document.getElementById("timer").innerHTML = "00:" + (remaining < 10 ? "0" + remaining : remaining);

       if (remaining <= 0) {
      clearInterval(inteval)
      document.getElementById("timer").innerHTML = "Time's up!";
   timerOn = false; 
    }
},1000)
    
    
  
  }

function resendOtp(event) {
  event.preventDefault(); 

  if (!timerOn) {
    timerOn = true; 
    timer(60); 
  }

  
  fetch('/resend-otp', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      alert(result.message); 
    } else {
      alert(result.message); 
    }
    window.location.reload()
  })
  .catch(error => {
    alert('Failed to resend OTP. Please try again later.');
    console.error('Error:', error);
  });
}

function enableResendButton() {
  document.getElementById('resendButton').style.pointerEvents = 'auto';
  document.getElementById('resendButton').style.opacity = '1';
}


timer(60);
</script>