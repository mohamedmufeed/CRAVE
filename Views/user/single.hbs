	<form action="/productdetails/{{product._id}}/review" method="POST">
    <div>
        <label for="customerName">Name:</label>
        <input type="text" name="customerName" id="customerName" required>
    </div>
    
    <div>
        <label for="rating">Rating:</label>
        <div class="rating">
            <input type="radio" name="rating" id="star5" value="1" /><label for="star1">★</label>
            <input type="radio" name="rating" id="star4" value="2" /><label for="star2">★</label>
            <input type="radio" name="rating" id="star3" value="3" /><label for="star3">★</label>
            <input type="radio" name="rating" id="star2" value="4" /><label for="star4">★</label>
            <input type="radio" name="rating" id="star1" value="5" /><label for="star5">★</label>
        </div>
    </div>

    <div>
        <label for="comment">Comment:</label>
        <textarea name="comment" id="comment" required></textarea>
    </div>
    <button type="submit">Submit Review</button>
</form>

